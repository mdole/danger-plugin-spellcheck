{
  "name": "danger-plugin-spellcheck",
  "description": "Spell checks any created or modified markdown files.",
  "author": {
    "name": "Orta Therox + Yuki Nishijima",
    "email": "orta.therox@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/orta/danger-plugin-spellcheck.git"
  },
  "bugs": {
    "url": "https://github.com/orta/danger-plugin-spellcheck/issues"
  },
  "homepage": "https://github.com/orta/danger-plugin-spellcheck#readme",
  "keywords": [
    "danger",
    "danger-plugin",
    "mdspell"
  ],
  "version": "2.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "commit": "git-cz",
    "build": "tsc",
    "test": "jest",
    "predocs": "rm -rf docs/",
    "docs": "esdoc -c .esdoc.json",
    "prepublish-only": "npm run build",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "prettier": "prettier",
    "prettier-write": "npm run prettier -- --parser typescript --no-semi --trailing-comma es5 --write --print-width 120",
    "prettier-project": "npm run prettier-write -- 'src/**/*.{ts,tsx}'"
  },
  "license": "MIT",
  "engines": {
    "node": ">=10.0.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.3",
    "danger": "9.1.8",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.19.0",
    "typescript": "3.5.2"
  },
  "optionalDependencies": {
    "esdoc": "^1.1.0"
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "tslint --fix",
      "npm run prettier-write --",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(.test)\\.(ts|tsx)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/"
    ]
  },
  "dependencies": {
    "cspell": "^5.13.2",
    "glob": "^7.1.4",
    "markdown-spellcheck": "^1.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "lint-staged"
      ]
    }
  }
}
